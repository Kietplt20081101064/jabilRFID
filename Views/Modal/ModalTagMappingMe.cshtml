                                            <select class="form-control" id="kt_datatable_search_status">
                                                <option value="">All</option>
                                                <option value="1">Pending</option>
                                                <option value="2">Delivered</option>
                                                <option value="3">Canceled</option>
                                                <option value="4">Success</option>
                                                <option value="5">Info</option>
                                                <option value="6">Danger</option>
                                            </select>
                                        </div>
                                    </div>*@
                                </div>
                            </div>
                            <!--end::Search Form-->
                            <!--end: Search Form-->
                            <!--begin: Datatable-->
                            <div class="datatable datatable-bordered datatable-head-custom" id="kt_datatable_me" style=""></div>
                            <!--end: Datatable-->
                        </div>
                    </div>
                    <div class="tab-pane fade" id="mapping-tab" role="tabpanel" aria-labelledby="memapping-tab">
                        <form id="MEMappingForm" class="form">
                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <label>EPC</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="EPC" placeholder="ME-...." />
                                        <div class="input-group-append">
                                            <button class="btn btn-secondary" id="btnGetReadedEPC" type="button"><i class="icon-xl la la-refresh"></i></button>
                                        </div>
                                    </div>
                                    <span class="form-text text-muted">Refresh to get newest EPC tag</span>

                                </div>
                                <div class="col-lg-1 d-flex flex-column justify-content-center align-items-center">
                                    <a href="#" class="btn btn-icon btn-success btn-circle">
                                        <i class="icon-xl fas fa-arrows-alt-h"></i>
                                    </a>
                                </div>
                                <div class="col-lg-5">
                                    <label>ME GRN</label>
                                    <input type="text" class="form-control" name="GRN" />

                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="button" id="btnMEMapTag" class="btn btn-primary mr-2">Map</button>
                                    <button type="reset" class="btn btn-secondary">Clear</button>
                                </div>

                            </div>


                            <div class="separator separator-dashed my-10"></div>
                            <div class="mb-5">
                                <div class="row align-items-center">
                                    <div class="col-lg-10">
                                        <div class="row align-items-center">
                                            <div class="col-md-4 my-2 my-md-0">
                                                <div class="input-icon">
                                                    <input type="text" class="form-control" placeholder="Search..." id="METagMappingSearch" />
                                                    <span>
                                                        <i class="flaticon2-search-1 text-muted"></i>
                                                    </span>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                    <div class="col-lg-1">
                                        <div class="row d-flex  flex-row-reverse">
                                            <a href="#" data-toggle="modal" data-target="#TagMappingImportModal" class="btn btn-success font-weight-bold mr-2">
                                                <i class="fas fa-file-upload"></i> Import
                                            </a>

                                        </div>

                                    </div>
                                    <div class="col-lg-1">
                                        <div class="row d-flex">
                                            <a href="@Url.Action("ExportTags","TagMapping")" class="btn btn-warning font-weight-bold mr-2">
                                                <i class="fas fa-file-download"></i> Export
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive" id="METagMapping" style="height: 450px;overflow-y: scroll;background:#ffffff">
                                <table class="table table-bordered mb-6 table-hover" id="TagMappingTable">
                                    <thead style="position: sticky; top: 0px; background: white">
                                        <tr class="bg-primary" style="color:#fff">
                                            <th scope="col">No.</th>
                                            <th scope="col">EPC</th>
                                            <th scope="col">GRN</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody >
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-5">
                                    <div class="dataTables_info" id="QtyNote"></div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



