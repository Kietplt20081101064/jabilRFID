
@{
    ViewBag.Title = "ModalTagMappingMe";
}

<style>
    .ME-header {
        display: flex;
        width: 100%;
        justify-content: space-between;
    }
</style>


<div class="modal fade" id="TagMappingMeModal" tabindex="-1" data-backdrop="static" aria-labelledby="exampleModalSizeXl" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header" style="display: block; padding: 0">
                <div class="ME-header" style="padding: 1.5rem 1.75rem; border-bottom: 1px solid #ebedf3">
                    <h5 class="modal-title" id="exampleModalLabel">ME Management</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="ME-header" style="padding: 1.5rem 1.75rem">
                    <ul class="nav nav-pills" id="" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active tab" id="memanage-tab" data-tab="manage-tab" data-toggle="tab" href="#manage-tab" aria-controls="profile">
                                <span class="nav-icon">
                                    <i class="flaticon-user-settings"></i>
                                </span>
                                <span class="nav-text">ME Table</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link tab" id="memapping-tab" data-tab="mapping-tab" data-toggle="tab" href="#mapping-tab">
                                <span class="nav-icon">
                                    <i class="flaticon-users"></i>
                                </span>
                                <span class="nav-text">ME Mapping</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="modal-body">
                <div class="tab-content" id="">
                    <div class="tab-pane fade show active" id="manage-tab" role="tabpanel" aria-labelledby="memanage-tab">
                        <div class="card-body">
                            <!--begin: Search Form-->
                            <!--begin::Search Form-->
                            <div class="mb-7">
                                <div class="row align-items-center">
                                    <div class="col-lg-9 col-xl-8">
                                        <div class="row align-items-center">
                                            <div class="col-md-4 my-2 my-md-0">
                                                <div class="input-icon">
                                                    <input type="text" class="form-control" placeholder="Search..." id="kt_datatable_search_query">
                                                    <span>
                                                        <i class="flaticon2-search-1 text-muted"></i>
                                                    </span>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    @*<div class="col-md-4 my-2 my-md-0">
                                        <div class="d-flex align-items-center">
